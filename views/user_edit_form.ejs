<form action="/users/update/<%= user.matricula %>/<%= user.ano_referencia %>" method="POST">
    <div class="container-fluid">
        <h5 class="card-title">Dados Pessoais</h5>
        <div class="row g-3 mb-3">
            <div class="col-md-4">
                <label class="form-label">Matrícula:</label>
                <input type="text" class="form-control" value="<%= user.matricula %>" readonly>
            </div>
            <div class="col-md-8">
                <label for="edit_nome" class="form-label">Nome Completo:</label>
                <input type="text" name="nome" id="edit_nome" class="form-control" value="<%= user.nome %>" required>
            </div>
            <div class="col-md-6">
                <label for="edit_categoria" class="form-label">Categoria:</label>
                <select name="categoria" id="edit_categoria" class="form-select">
                    <option value="IPC" <%= user.categoria === 'IPC' ? 'selected' : '' %>>IPC</option>
                    <option value="IPC-P" <%= user.categoria === 'IPC-P' ? 'selected' : '' %>>IPC-P</option>
                    <option value="EPC" <%= user.categoria === 'EPC' ? 'selected' : '' %>>EPC</option>
                    <option value="EPC-P" <%= user.categoria === 'EPC-P' ? 'selected' : '' %>>EPC-P</option>
                    <option value="DPC" <%= user.categoria === 'DPC' ? 'selected' : '' %>>DPC</option>
                    <option value="DPC-P" <%= user.categoria === 'DPC-P' ? 'selected' : '' %>>DPC-P</option>
                </select>
            </div>
        </div>

        <hr>

        <h5 class="card-title mt-3">Critérios de Classificação</h5>
        <div class="row g-3 mb-3">
            <div class="col-md-6">
                <div class="form-check form-switch">
                    <input type="checkbox" name="gestante" class="form-check-input" id="edit_gestante" <%= user.gestante ? 'checked' : '' %>>
                    <label for="edit_gestante" class="form-check-label">Está gestante?</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-check form-switch">
                    <input type="checkbox" name="doisvinculos" class="form-check-input" id="edit_doisvinculos" <%= user.doisvinculos ? 'checked' : '' %>>
                    <label for="edit_doisvinculos" class="form-check-label">Possui dois vínculos?</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-check form-switch">
                    <input type="checkbox" name="estudante" class="form-check-input" id="edit_estudante" <%= user.estudante ? 'checked' : '' %>>
                    <label for="edit_estudante" class="form-check-label">É estudante?</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-check form-switch">
                    <input type="checkbox" name="possui_conjuge" class="form-check-input" id="edit_possui_conjuge" <%= user.possui_conjuge ? 'checked' : '' %>>
                    <label for="edit_possui_conjuge" class="form-check-label">Possui cônjuge servidor?</label>
                </div>
            </div>
            <div class="col-md-6">
                <label for="edit_qtd_filhos" class="form-label">Qtd. de filhos:</label>
                <input type="number" name="qtd_filhos" id="edit_qtd_filhos" class="form-control" value="<%= user.qtd_filhos %>" min="0">
            </div>
        </div>

        <hr>

        <h5 class="card-title mt-3">Datas Importantes</h5>
        <div class="row g-3">
            <div class="col-md-6">
                <label for="edit_data_nascimento" class="form-label">Data de Nascimento:</label>
                <input type="date" name="data_nascimento" id="edit_data_nascimento" class="form-control" value="<%= user.data_nascimento_iso %>" required>
            </div>
            <div class="col-md-6">
                <label for="edit_data_ingresso" class="form-label">Data de Ingresso:</label>
                <input type="date" name="data_ingresso" id="edit_data_ingresso" class="form-control" value="<%= user.data_ingresso_iso %>" required>
            </div>
        </div>
        
        <div class="d-grid mt-4">
            <button type="submit" class="btn btn-info text-white">
                <i class="bi bi-save-fill me-2"></i>Salvar Alterações
            </button>
        </div>
    </div>
</form>